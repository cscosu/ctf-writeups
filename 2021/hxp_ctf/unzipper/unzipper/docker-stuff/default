server {
        listen 80 default_server;
        listen [::]:80 default_server;

        client_body_timeout 10s;
        client_header_timeout 10s;
        keepalive_timeout 5 5;
        send_timeout 10s;

        root /var/www/html;

        index index.php;

        server_name _;

        location = / {
                try_files $uri $uri/ =404;
        }

        location = /index.php {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/run/php/php7.4-fpm.sock;
        }

        location / {
                return 404;
        }
}
